depends find

configure() {
    TUTERM_NAME="find-tutorial"
}

run() {
    m 'Welcome to tutorial of the `find` command!'
    m "The find command is used to search and locate the list of files"
    m "and directories based on specified conditions"
    echo
    M "Let's find all files in the system directory containing startup scripts"
    M 'Repeat after me:'
    c find /etc/init.d -type f
    M "Let's find out which of them are shell scripts"
    c find /etc/init.d -type f -name "*.sh"
    M "Let's find all files with permission to be executed in directory /etc"
    c find /etc -type f -perm /a=x
    M 'Now find the files with 777 permission in directory /etc'
    c find /etc -type f -perm 777
    M "Find read-only files in directory /etc"
    c find /etc -type f -perm /u=r
    M "Find all empty files in directory /etc"
    c find /etc -type f -empty
    M "Find all empty subdirectories in directory /etc"
    c find /etc -type d -empty
    M "Find all hidden files in directory /etc"
    c find /etc -type f -name ".*"
    M "Find all files in directory /etc owned by root"
    c find /etc -type f -user root
    M "Find all files in home directory sized at least 5MB and at most 10MB"
    c find /home -type f -size +5M -size -10M
    M "Find all files in home directory which are modified more than 2 days back"
    M "and less than 20 days"
    c find /home -mtime +2 -mtime -20
}